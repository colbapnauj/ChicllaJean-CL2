@model ChicllaJean_CL2.Models.Cliente

@{
    ViewBag.Title = "Depositar";
}

<h2>Depositar</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.nombre)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.nombre)
    </dd>
</dl>


@using (Html.BeginForm())
{
    <div class="form-group"></div>

    <div style="display:none">
        @Html.TextBox("clientId", Model.id, htmlAttributes: new { @class = "form-control" })

    </div>

    <label>Monto a depositar</label>
    <div class="col-md-10">
        @Html.TextBox("montoDeposito", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="mt-2">

        <button class="btn btn-primary">Depositar</button>
    </div>
}


<div class="mt-3">
    @Html.ActionLink("Ver Listado", "Listado")
</div>

@if (ViewBag.mensaje != null)
{
    <div class="my-4 alert alert-success">
        @ViewBag.mensaje
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
